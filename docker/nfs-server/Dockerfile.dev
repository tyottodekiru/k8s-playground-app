# Development NFS Server with better tmpfs support
FROM ubuntu:22.04

# Install NFS server and related tools
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    nfs-kernel-server \
    rpcbind \
    util-linux \
    && rm -rf /var/lib/apt/lists/*

# Create exports directory
RUN mkdir -p /exports && chmod 777 /exports

# Copy enhanced entrypoint script
COPY entrypoint-dev.sh /usr/local/bin/entrypoint-dev.sh
RUN chmod +x /usr/local/bin/entrypoint-dev.sh

# Expose NFS related ports
EXPOSE 2049/tcp 111/tcp 111/udp 20048/tcp 20048/udp

# Use development entrypoint
ENTRYPOINT ["/usr/local/bin/entrypoint-dev.sh"]